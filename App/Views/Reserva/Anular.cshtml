@model IEnumerable<App.Entity.Reserva>

<div  style="text-align:center; margin-bottom:20px;">
    <h1>
        <span class="label label-default" style="background-color:black;">Anular Reserva</span>
    </h1>
</div>

@Html.Action("Search")



@if (Session["Reserva.Anular"] != null)
{
   <script>
       swal({
           title: "",
           text: "@Session["Reserva.Anular"]",
           icon: "success"
       });
   </script>

    Session["Reserva.Anular"] = null;
}




<div >

    <table class="table table-responsive table-fixed">

        <thead class="th-bg-black">
            <tr>
                <th style="width: 10%;">
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th style="width: 25%;">
                    Cliente
                </th>
                <th style="width: 20%;">
                    Fecha de Reserva
                </th>
                <th style="width: 15%;">
                    Hora de Ingreso
                </th>
                <th style="width: 10%;">
                    Habitacion
                </th>
                <th style="width: 10%;">
                    @Html.DisplayNameFor(model => model.Habitacion.Numero)
                </th>
                <th style="width: 10%; height:38px;"> </th>
            </tr>
        </thead>

        
        <tbody class="table-body--lg">
            @foreach (var item in Model)
            {
                <tr class="row row-table">
                    <td style="width: 10%;">
                        @Html.DisplayFor(modelItem => item.Cliente.Dni)
                    </td>
                    <td style="width: 25%;">
                        @item.Cliente.Nombre @item.Cliente.ApellidoPaterno @item.Cliente.ApellidoMaterno
                    </td>
                    <td style="width: 20%;">
                        @item.Fecha.ToString("yyyy-MM-dd")
                    </td>
                    <td style="width: 15%;">
                        @item.Fecha.ToString("HH:ss")
                    </td>
                    <td style="width: 10%;">
                        @Html.DisplayFor(modelItem => item.Habitacion.TipoHabitacion.Descripcion)
                    </td>
                    <td style="width: 10%;">
                        @Html.DisplayFor(modelItem => item.Habitacion.Numero)
                    </td>
                    <td style="width: 10%;">
                        @Html.ActionLink("Anular", "Apply", new { id = item.IdReserva }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>



